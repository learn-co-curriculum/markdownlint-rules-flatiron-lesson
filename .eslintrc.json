{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:jest/recommended",
    "plugin:jest/style",
    "eslint:recommended", 
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
